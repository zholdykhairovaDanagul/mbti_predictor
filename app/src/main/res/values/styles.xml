<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:windowBackground">@drawable/spalash_screen</item>-->
<!--        <item name="android:windowLightStatusBar">true</item>-->
    </style>

    <style name="AppButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="AppButtonGreen" parent="AppButton">
        <item name="android:background">@drawable/shape_button_green</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
